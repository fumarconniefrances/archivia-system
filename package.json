{
  "name": "archivia-system",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint assets/js/**/*.js",
    "lint:css": "stylelint assets/css/main.css",
    "lint:html": "htmlhint \"*.html\"",
    "format": "prettier --write \"*.html\" \"assets/**/*.{css,js}\"",
    "format:check": "prettier --check \"*.html\" \"assets/**/*.{css,js}\"",
    "test:visual": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "htmlhint": "^1.1.4",
    "prettier": "^3.5.3",
    "nodemon": "^3.1.10",
    "stylelint": "^16.18.0",
    "stylelint-config-standard": "^37.0.0"
  }
}
