Options -Indexes

<IfModule mod_rewrite.c>
  RewriteEngine On
  # Enforce HTTPS in non-local environments.
  RewriteCond %{HTTPS} !=on
  RewriteCond %{HTTP_HOST} !^(localhost|127\.0\.0\.1)$ [NC]
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

<IfModule mod_headers.c>
  Header always set Content-Security-Policy "default-src 'self'; img-src 'self' data: blob: https:; style-src 'self' 'unsafe-inline'; script-src 'none'; connect-src 'self'; base-uri 'self'; form-action 'self'; frame-ancestors 'self'" "expr=%{REQUEST_URI} =~ m#^/ARCHIVA/api/documents\.php$# && %{QUERY_STRING} =~ /(^|&)action=preview(&|$)/"
  Header always set Content-Security-Policy "default-src 'self'; img-src 'self' data: https:; style-src 'self'; script-src 'self'; connect-src 'self'; base-uri 'self'; form-action 'self'; frame-ancestors 'none'" "expr=!(%{REQUEST_URI} =~ m#^/ARCHIVA/api/documents\.php$# && %{QUERY_STRING} =~ /(^|&)action=preview(&|$)/)"
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN" "expr=%{REQUEST_URI} =~ m#^/ARCHIVA/api/documents\.php$# && %{QUERY_STRING} =~ /(^|&)action=preview(&|$)/"
  Header always set X-Frame-Options "DENY" "expr=!(%{REQUEST_URI} =~ m#^/ARCHIVA/api/documents\.php$# && %{QUERY_STRING} =~ /(^|&)action=preview(&|$)/)"
  Header always set Referrer-Policy "no-referrer"
  Header always set Permissions-Policy "camera=(), microphone=(), geolocation=()"
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains" "expr=%{HTTPS} == 'on'"
</IfModule>
